<%- include("../partials/header") %>
<div class="container top-margin">
		<div class="container card" id="new">
			<h1 class="display-4">Edit : <%= blog.title%></h1>
			<form action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
	  			<div class="form-group">
					<label >Title</label>
				    <input type="text" class="form-control" name="blog[title]" value = "<%= blog.title%>" >
				</div>
				<div class="form-group">
					<label >Image URL</label>
				    <input type="text" class="form-control" name="blog[image]" value = "<%= blog.image%>">
				</div>
				<div class="field">
					<label>Blog Content</label>
					<textarea class="form-control" name = "blog[body]"><%= blog.body%></textarea>
				</div>
	  			<button type="submit" class="btn btn-success btn-lg ">Submit</button>
			</form>
		</div>	
	</div>
<%- include("../partials/footer") %>